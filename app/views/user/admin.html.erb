<div class="info-box">
<div class="content">
<%= form_for :user, :url => invite_path , :html => {id: "user_form"}, remote: true do |f| %>


  
<div class="row">

<%#=render partial: 'user_form', :locals => { :f => f}%>


    <div class="col-lg-3 profile-settings-sidebar">
      <h4 class="prepend-top-0">Invite Member</h4>
    </div>

    <div class="col-lg-9">
      <div class="row">


          <div class="form-group">
            <%=f.label(:first_name, class: "label-light")%>
            <%=f.text_field(:first_name, class: "form-control", placeholder: "First Name")%>  
          </div>

     
          <div class="form-group">
            <%=f.label(:last_name, class: "label-light")%>
            <%=f.text_field(:last_name, class: "form-control", placeholder: "First Name")%> 
          </div>
   
      <div class="form-group">
        <%=f.label(:email, class: "label-light")%>
        <%=f.email_field(:email, class: "form-control", placeholder: "Email Address")%>  
        <span class="help-block">We use email for sending password through your email account.</span>
      </div>

                  <div class="form-group">
        <%=f.label(:password, class: "label-light")%>
        <%=f.password_field(:password, class: "form-control", placeholder: "Password")%>  
      </div>

                    <div class="prepend-top-default append-bottom-default">
        <%= submit_tag("Add User Account", class: "btn btn-success")%>
      </div>
</div>
</div>






<%end%>
</div>
</div>

